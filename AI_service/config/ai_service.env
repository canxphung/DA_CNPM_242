# config/.env
DATABASE_URL=sqlite:///data/greenhouse.db
OPENAI_API_KEY=your_openai_api_key_here
MODEL_STORAGE_PATH=data/models
CACHE_STORAGE_PATH=data/cache
DEFAULT_IRRIGATION_DURATION=10
CONFIDENCE_THRESHOLD=0.7
API_HOST=0.0.0.0
API_PORT=8000

# Core Operations Service Integration
CORE_OPS_API_URL=http://localhost:8000
CORE_OPS_API_KEY=your_api_key_here

# Core Operations Redis
CORE_OPS_REDIS_HOST=localhost
CORE_OPS_REDIS_PORT=6379
CORE_OPS_REDIS_DB=0
CORE_OPS_REDIS_PASSWORD=

# Core Operations Firebase
CORE_OPS_FIREBASE_CREDENTIALS_PATH=/path/to/firebase_credentials.json
CORE_OPS_FIREBASE_DATABASE_URL=https://your-firebase-project.firebaseio.com

# Resource Optimization
MIN_WATER_SAVING_PERCENT=10
PREFERRED_IRRIGATION_TIMES=06:00,18:00
AVOID_IRRIGATION_TIMES=12:00,13:00